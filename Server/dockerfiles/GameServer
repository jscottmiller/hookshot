FROM --platform=linux/amd64 ubuntu

RUN apt-get update && apt-get install -y \
    libxcursor1 \
    libxinerama1 \
    libxrandr2 \
    libxi6 \
    libgl1 \
    python3 \
    python3-pip \
    curl \
    jq

RUN pip3 install awscli

WORKDIR /app

ADD ./Exports/Linux/* ./
ADD ./Server/scripts/start-game-server-ecs.sh ./

EXPOSE 9999/udp

CMD /bin/sh start-game-server-ecs.sh